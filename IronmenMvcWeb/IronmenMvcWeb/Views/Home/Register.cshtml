@model IronmenMvcWeb.Models.Register

@{
    ViewData["Title"] = "Register";
}
<center><h2>@ViewData["Title"]</h2></center>


<center><h2>Create</h2></center>

<center><h4>Member Information</h4></center>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">
                <span style="color:red">@ViewBag.Msg</span>
            </div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" type="text" id="username" name="Username" placeholder="Input Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <input asp-for="StudentID" class="form-control" type="text" id="studentID" name="StudentID" placeholder="Input Student ID" maxlength="10" onkeyup="checkStdId()" />
                <small id="emailHelp" class="form-text text-muted">請輸入8位英數字</small>
                <span asp-validation-for="StudentID" id="msg_user_name" class="text-danger"></span>
            </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" type="email" id="email" name="Email" placeholder="Input Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control"  type="password" id="password1" name="Password" placeholder="Input password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password_confirm" class="control-label"></label>
                    <input asp-for="Password_confirm" class="form-control" type="password" id="password2" name="Password_confirm" placeholder="Input password confirm" />
                    <span asp-validation-for="Password_confirm" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <center><button type="submit" class="btn btn-primary">Submit</button></center>
                    @*<center><input type="submit" value="Submit" class="btn btn-default" onsubmit="return check();" /></center>*@

                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<script src="~/Scripts/jquery.min.js"></script>
